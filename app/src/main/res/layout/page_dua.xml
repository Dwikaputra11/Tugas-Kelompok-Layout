<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:padding="15dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:textColor="@color/black"
        android:id="@+id/rangkuman"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rangkuman Untuk Chairul"
        android:textSize="20dp"
        android:textStyle="bold" />
    <TextView
        android:textColor="@color/black"
        android:layout_below="@+id/rangkuman"
        android:text="5 artikel teratas sekarang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/cloud"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginLeft="300dp"
        android:src="@drawable/cloudy" />
    <TextView
        android:textColor="@color/black"
        android:id="@+id/duaempat"
        android:layout_marginLeft="330dp"
        android:layout_below="@id/cloud"
        android:text="24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="@color/black"
        android:textSize="10dp"
        android:layout_below="@+id/cloud"
        android:layout_marginLeft="345dp"
        android:text="o"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="@color/black"
        android:layout_below="@+id/cloud"
        android:layout_marginLeft="353dp"
        android:text="C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

//isi body
    <androidx.cardview.widget.CardView
        android:id="@+id/foto"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="83dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:id="@+id/gambar_sambo"
            android:layout_width="match_parent"
            android:layout_height="215dp"
            app:cardCornerRadius="15dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/samboo" />
        </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/insert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gambar_sambo"
                android:layout_marginTop="10dp"
                android:text="1. Insertive"
                android:textColor="@color/black"
                android:textSize="18dp" />

        <TextView
            android:id="@+id/kapolri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/insert"
            android:paddingLeft="20dp"
            android:text="Kapolri Benarkan Isu Brigadir J\nLecehkan Istri Ferdy Sambo,\ntapi.."
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold" />

             <TextView
                 android:id="@+id/jam"
                 android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/kapolri"
                android:paddingLeft="20dp"
                android:text="4 jam yang lalu"
                android:textSize="18dp" />
        <ImageButton
            android:layout_marginRight="40dp"
            android:layout_below="@id/kapolri"
            android:layout_alignRight="@+id/jam"
            android:background="@drawable/ic_konteks"
            android:layout_width="20dp"
            android:layout_height="20dp"
            />
            <ImageButton
                android:layout_below="@id/kapolri"
                android:layout_alignRight="@+id/jam"
                android:background="@drawable/ic_dot_vertikal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#787575"/>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    //cardview dua
    <androidx.cardview.widget.CardView
        android:layout_marginTop="5dp"
        android:layout_below="@+id/foto"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/dua"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Tempoco" />
            <TextView
                android:id="@+id/anggota"
                android:paddingLeft="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="21dp"
                android:layout_below="@+id/dua"
                android:text="Anggota Komisi III Hinca\nPanjaitan:Kapolri Bak\nMatahari jika Malam Gelap\nAkibat Bintang Berjatuhan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
           <androidx.cardview.widget.CardView
               android:layout_marginTop="10dp"
               android:layout_marginRight="10dp"
               android:layout_alignRight="@id/anggota"
               android:layout_width="95dp"
               android:layout_height="95dp"
               android:backgroundTint="#F2F3F5"
               app:cardCornerRadius="12dp"
               />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
<!--    tidak menggunakan cardview -->

    <ImageView
        android:layout_marginTop="480dp"
        android:layout_marginLeft="280dp"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:backgroundTint="#F2F3F5"/>
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/navigation"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">
        <ImageButton
            android:layout_marginRight="70dp"
            android:background="@drawable/ic_baseline_emoji_people_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:layout_marginRight="30dp"
            android:background="@drawable/ic_language_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:layout_marginLeft="40dp"
            android:background="@drawable/ic_baseline_star_border_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:layout_marginLeft="70dp"
            android:background="@drawable/ic_baseline_library_books_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="40dp"
        android:gravity="left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="10dp"
            android:drawableLeft=""
            android:text="Untuk Anda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="47dp"
            android:text="Judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
        <LinearLayout
            android:layout_marginTop="40dp"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginRight="45dp"
                android:drawableLeft=""
                android:text="Untuk Anda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginRight="30dp"
                android:text="Kios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>