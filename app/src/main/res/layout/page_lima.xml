    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="0dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="20dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_baseline_search_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Kios"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_baseline_account_circle_24" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_hiburan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="Hiburan"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <ImageButton
        android:id="@+id/iv_favorite_1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="-10dp"
        android:background="@drawable/circular"
        android:backgroundTint="@color/white"
        android:elevation="10dp"
        android:src="@drawable/ic_baseline_star_outline_24"
        app:layout_constraintEnd_toEndOf="@+id/view_logo_1"
        app:layout_constraintStart_toStartOf="@+id/view_logo_1"
        app:layout_constraintTop_toBottomOf="@+id/view_logo_1" />

    <androidx.cardview.widget.CardView
        android:id="@+id/view_logo_1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#ECECEC"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toStartOf="@+id/tv_hiburan"
        app:layout_constraintTop_toBottomOf="@id/tv_hiburan">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circular"
            app:cardCornerRadius="50dp"
            >
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/cpp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                />
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/view_logo_2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="32dp"
        android:backgroundTint="#ECECEC"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/view_logo_1"
        app:layout_constraintStart_toEndOf="@+id/view_logo_1"
        app:layout_constraintTop_toTopOf="@+id/view_logo_1">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circular"
            app:cardCornerRadius="50dp"
            >
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/java"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                />
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

    <ImageButton
        android:id="@+id/iv_favorite_2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="-10dp"
        android:background="@drawable/circular"
        android:backgroundTint="@color/white"
        android:elevation="10dp"
        android:src="@drawable/ic_baseline_star_outline_24"
        app:layout_constraintEnd_toEndOf="@+id/view_logo_2"
        app:layout_constraintStart_toStartOf="@+id/view_logo_2"
        app:layout_constraintTop_toBottomOf="@+id/view_logo_2" />

    <androidx.cardview.widget.CardView
        android:id="@+id/view_logo_3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="32dp"
        android:backgroundTint="#ECECEC"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/view_logo_2"
        app:layout_constraintStart_toEndOf="@+id/view_logo_2"
        app:layout_constraintTop_toTopOf="@+id/view_logo_2">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circular"
            app:cardCornerRadius="50dp"
            >
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/js"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                />
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

    <ImageButton
        android:id="@+id/iv_favorite_3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="-10dp"
        android:background="@drawable/circular"
        android:backgroundTint="@color/white"
        android:elevation="10dp"
        android:src="@drawable/ic_baseline_star_outline_24"
        app:layout_constraintEnd_toEndOf="@+id/view_logo_3"
        app:layout_constraintStart_toStartOf="@+id/view_logo_3"
        app:layout_constraintTop_toBottomOf="@+id/view_logo_3" />


    <TextView
        android:id="@+id/tv_nama_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="KapanLagi.com"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/view_logo_1"
        app:layout_constraintStart_toStartOf="@+id/view_logo_1"
        app:layout_constraintTop_toBottomOf="@+id/iv_favorite_1" />

    <TextView
        android:id="@+id/tv_nama_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="InsertLive"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/view_logo_2"
        app:layout_constraintStart_toStartOf="@+id/view_logo_2"
        app:layout_constraintTop_toBottomOf="@+id/iv_favorite_2" />

    <TextView
        android:id="@+id/tv_nama_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="KpopNews"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/view_logo_3"
        app:layout_constraintStart_toStartOf="@+id/view_logo_3"
        app:layout_constraintTop_toBottomOf="@+id/iv_favorite_3" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Gratis"
        app:layout_constraintEnd_toEndOf="@+id/tv_nama_1"
        app:layout_constraintStart_toStartOf="@+id/tv_nama_1"
        app:layout_constraintTop_toBottomOf="@+id/tv_nama_1" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Gratis"
        app:layout_constraintEnd_toEndOf="@+id/tv_nama_2"
        app:layout_constraintStart_toStartOf="@+id/tv_nama_2"
        app:layout_constraintTop_toBottomOf="@+id/tv_nama_2" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Gratis"
        app:layout_constraintEnd_toEndOf="@+id/tv_nama_3"
        app:layout_constraintStart_toStartOf="@+id/tv_nama_3"
        app:layout_constraintTop_toBottomOf="@+id/tv_nama_3" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="32dp"
        android:background="#E6E6E6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="Makanan dan Minuman"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <androidx.cardview.widget.CardView
        android:id="@+id/view_logo_food_1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#FFF"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toStartOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/textView9">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/logo_1"
            />

    </androidx.cardview.widget.CardView>

    <ImageButton
        android:id="@+id/iv_favorite_food_1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="-10dp"
        android:background="@drawable/circular"
        android:backgroundTint="@color/white"
        android:elevation="10dp"
        android:src="@drawable/ic_baseline_star_outline_24"
        app:layout_constraintEnd_toEndOf="@+id/view_logo_food_1"
        app:layout_constraintStart_toStartOf="@+id/view_logo_food_1"
        app:layout_constraintTop_toBottomOf="@+id/view_logo_food_1" />

    <androidx.cardview.widget.CardView
        android:id="@+id/view_logo_food_2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="32dp"
        android:backgroundTint="#FFF"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="@id/view_logo_food_1"
        app:layout_constraintStart_toEndOf="@+id/view_logo_food_1"
        app:layout_constraintTop_toTopOf="@id/view_logo_food_1">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/logo_2"
            />
    </androidx.cardview.widget.CardView>

    <ImageButton
        android:id="@+id/iv_favorite_food_2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="-10dp"
        android:background="@drawable/circular"
        android:backgroundTint="@color/white"
        android:elevation="10dp"
        android:src="@drawable/ic_baseline_star_outline_24"
        app:layout_constraintEnd_toEndOf="@+id/view_logo_food_2"
        app:layout_constraintStart_toStartOf="@+id/view_logo_food_2"
        app:layout_constraintTop_toBottomOf="@+id/view_logo_food_2" />

    <androidx.cardview.widget.CardView
        android:id="@+id/view_logo_food_3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="32dp"
        android:backgroundTint="#FFF"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="@id/view_logo_food_2"
        app:layout_constraintStart_toEndOf="@+id/view_logo_food_2"
        app:layout_constraintTop_toTopOf="@id/view_logo_food_2">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher_round"
            />
    </androidx.cardview.widget.CardView>

    <ImageButton
        android:id="@+id/iv_favorite_food_3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="-10dp"
        android:background="@drawable/circular"
        android:backgroundTint="@color/white"
        android:elevation="10dp"
        android:src="@drawable/ic_baseline_star_outline_24"
        app:layout_constraintEnd_toEndOf="@+id/view_logo_food_3"
        app:layout_constraintStart_toStartOf="@+id/view_logo_food_3"
        app:layout_constraintTop_toBottomOf="@+id/view_logo_food_3" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bottom_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:backgroundTint="#f6f6f6">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="12dp"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/btn_home"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/study" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Untuk Anda"
                        android:textAlignment="center" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_invisible"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/globe" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Pay"
                        android:textAlignment="center"

                        />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/btn_profile"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_baseline_star_border_24" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Favorit"
                        android:textAlignment="center" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_kios"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/bookshelf" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kios"
                        android:textAlignment="center" />
                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.bottomappbar.BottomAppBar>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>